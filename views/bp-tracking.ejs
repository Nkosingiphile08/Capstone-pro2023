<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Pressure Tracking</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<style>
    .navbar-nav .nav-link .fa {
        color: #03a4ff;
    }
</style>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <div x-data="{ isOpen: false }">
                    <!-- Toggle button for the menu -->
                    <a @click="isOpen = !isOpen" class="nav-link">
                        <i class="fa fa-bars fa-2x"></i>
                    </a>
                    <!-- Menu container -->
                    <span x-show="isOpen" class="menu">
                        <!-- Menu items -->
                        <ol>
                            <li><a href="/index">Home</a></li>
                            <li><a href="/language">Languages</a></li>
                            <li><a href="/about">About</a></li>
                            <li><a href="#">Logout</a></li>
                        </ol>
                    </span>
                </div>
            </li>
        </ul>
        <a class="navbar-brand" href="/index">
            <i class="fa fa-home fa-2x"></i> Home
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fa fa-bell fa-2x"></i>
                        <span class="badge badge-danger">5</span>
                    </a>
                </li>

            </ul>
        </div>
    </nav>
    <br>
    <section class="content">
        <div class="container text-center">
            <h1>Hypertension Tracker</h1>

            <div class="mt-3">
                <form>
                    <div class="form-group">
                        <label for="systolicBP">Systolic BP:</label>
                        <input type="number" class="form-control" id="systolicBP" x-model.number="systolicBP">
                    </div>

                    <div class="form-group">
                        <label for="diastolicBP">Diastolic BP:</label>
                        <input type="number" class="form-control" id="diastolicBP" x-model.number="diastolicBP">
                    </div>

                    <div class="form-group">
                        <label for="pulse">Pulse:</label>
                        <input type="number" class="form-control" id="pulse" x-model.number="pulse">
                    </div>
                    <br>
                    <button @click="addReading" class="btn btn-primary">Add Reading</button>
                </form>
            </div>

            <div class="mt-5">
                <canvas x-show="chartData" id="hypertension-chart" width="400" height="200"></canvas>
            </div>
        </div>
        <br>
    </section>
    <br>
    <br>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center mx-3">
            <div class="navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"></li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bp-tracking"><i class="fa fa-heartbeat fa-2x"></i>
                            bp-tracking</bp-tracking></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/appointment"><i class="fa fa-medkit fa-2x"></i> Appointment</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/community-support"><i class="fa fa-comments-o fa-2x"></i> Community
                            support</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/recommendations"><i class="fa fa-stethoscope fa-2x"></i>
                            Recommendations</a>
                    </li>
                    <li class="nav-item"></li>
                </ul>
            </div>
        </nav>
    </div>
    <br>
    <script>
        const data = {
            labels: [], // Labels for x-axis (e.g., months)
            datasets: [{
                label: 'Systolic BP',
                borderColor: 'red',
                fill: false,
                data: [], // Systolic BP data
            }, {
                label: 'Diastolic BP',
                borderColor: 'green',
                fill: false,
                data: [], // Diastolic BP data
            }, {
                label: 'Pulse',
                borderColor: 'blue',
                fill: false,
                data: [], // Pulse data
            }],
        };

        const ctx = document.getElementById('hypertension-chart').getContext('2d');

        const chart = new Chart(ctx, {
            type: 'line',
            data: data,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        type: 'category',
                        labels: data.labels,
                    },
                    y: {
                        beginAtZero: true,
                    },
                },
            },
        });

        // Sample data
        const sampleData = {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct'],
            systolicBP: [100, 119, 120, 135, 140, 145, 150, 155, 160, 165],
            diastolicBP: [60, 61, 70, 76, 77, 80, 82, 84, 86, 88],
            pulse: [70, 72, 74, 76, 78, 80, 82, 84, 86, 88],
        };

        // Update chart data
        chart.data.labels = sampleData.labels;
        chart.data.datasets[0].data = sampleData.systolicBP;
        chart.data.datasets[1].data = sampleData.diastolicBP;
        chart.data.datasets[2].data = sampleData.pulse;
        chart.update();
    </script>

</body>

</html>