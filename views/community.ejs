<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>community-support</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<style>

.navbar-nav .nav-link .fa {
        color: #03a4ff;
    }

</style>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"></li>
                <li class="nav-item">
                    <a class="nav-link" href="/index"><i class="fa fa-home fa-2x"></i> Home</a>
                </li>
                <li class="nav-item"></li>
                <li class="nav-item"></li>
                <li class="nav-item"></li>
                <li class="nav-item"></li>
                <li class="nav-item"></li>
                <li class="nav-item"></li>
                <li class="nav-item"></li>
                <li class="nav-item">
                    <i id="open-notifications" class="fa fa-bell fa-2x"></i>
                    <div class="notifications-content">
                        <!-- Notifications will appear here -->
                    </div>
                </li>
                <li class="nav-item"></li>
                <li class="nav-item">
                    <div x-data="{ isOpen: false }">
                        <!-- Toggle button for the menu -->
                        <i @click="isOpen = !isOpen" class="fa fa-bars fa-2x"></i>
                        <!-- Menu container -->
                        <span x-show="isOpen" class="menu">
                            <!-- Menu items -->
                            <ol>
                                <li><a href="/index">Home</a></li>
                                <li><a href="/languages">Languages</a></li>
                                <li><a href="/about">About</a></li>
                                <li><a href="/index">Logout</a></li>
                            </ol>
                        </span>
                    </div>
                </li>
                <li class="nav-item"></li>
            </ul>
        </div>
    </nav>
    <br>

    <div class="container">
      <h1 class="card-header mt-4 text-center">Community support</h1>

        <section class="directory">
            <div x-data="{ posts: [], postTitle: '', postContent: '' }">
                <h2>Create a Post</h2>
                <form
                    @submit.prevent="posts.push({ title: postTitle, content: postContent }); postTitle = ''; postContent = '';">
                    <div class="form-group">
                        <label for="postTitle">Title:</label>
                        <input type="text" id="postTitle" class="form-control" placeholder="Title" x-model="postTitle"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="postContent">Write Post:</label>
                        <textarea id="postContent" class="form-control" placeholder="Write post" x-model="postContent"
                            rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Create Post</button>
                </form>
            </div>
        </section>
        <br>

        <section class="directory">
            <div id="postList">
                <ul>
                    <template x-for="(post, index) in posts" :key="index">
                        <li>
                            <h3 x-text="post.title"></h3>
                            <p x-text="post.content"></p>
                        </li>
                    </template>
                </ul>
            </div>
        </section>
    </div>

    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center mx-3">
            <div class="navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"></li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bp-tracking"><i class="fa fa-heartbeat fa-2x"></i> bp-tracking</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/appointment"><i class="fa fa-medkit fa-2x"></i> Appointment</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/community-support"><i class="fa fa-comments-o fa-2x"></i> Community
                            support</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/recommendations"><i class="fa fa-stethoscope fa-2x"></i>
                            Recommendations</a>
                    </li>
                    <li class="nav-item"></li>
                </ul>
            </div>
        </nav>
    </div>

    <script>
        const openButton = document.getElementById('open-notifications');
        const notificationsContent = document.querySelector('.notifications-content');

        openButton.addEventListener('click', () => {
            notificationsContent.style.display = notificationsContent.style.display === 'block' ? 'none' : 'block';
        });

        // Close notifications when clicking outside the tab
        document.addEventListener('click', (event) => {
            if (!notificationsContent.contains(event.target) && event.target !== openButton) {
                notificationsContent.style.display = 'none';
            }
        });
        const notification = document.createElement('div');
        notification.classList.add('notification');
        notification.innerHTML = `
            <p>You have a new message!</p>
            <span class="timestamp">2 minutes ago</span>
            `;
        notificationsContent.appendChild(notification);
    </script>

</body>

</html>
