            <script>
                console.log("Hello Express")


                const myForm = document.getElementById('myform')

                const signUpModal = document.getElementById("mymodal")

                // Listen for form submissions
                myForm.addEventListener("submit", (event) => {

                    // Prevent page from reloading when submitting form.
                    event.preventDefault()

                    // Define all values
                    const gender = document.getElementById("Sex").value;
                    const age = document.getElementById("Age").value;
                    const familyHistory = document.getElementById("Genetic_Pedigree_Coefficient").value;
                    const weight = document.getElementById("Weight").value;
                    const height = document.getElementById("Height").value;
                    const smoker = document.getElementById("Smoking").value;
                    const activityMinutes = document.getElementById("Physical_activity").value;
                    const saltContent = document.getElementById("salt_content_in_the_diet").value;
                    const alcoholUnits = document.getElementById("alcohol_consumption_per_day").value;
                    const stressLevel = document.getElementById("stress_levels").value;
                    const kidneyDisease = document.getElementById("Chronic_kidney_disease").value;
                    const results = document.getElementById("results")
                    // calculate Body Mass Index BMI
                    const heightInMeters = height * 0.3048
                    const BMI = parseFloat(weight) / Math.pow(parseFloat(heightInMeters), 2)

                    // Calculate bloodPressure

                    let bloodPressure;

                    if (gender === "Female") {
                        if (age <= 30 && familyHistory === "0" && activityMinutes >= 30 && saltContent === "Less than 2500" && alcoholUnits < 3 && (stressLevel === "Low" || stressLevel === "Medium") && kidneyDisease === "No") {
                            bloodPressure = "Normal Blood Pressure"
                        } else {
                            bloodPressure = 'Abnormal Blood Pressure';
                        }
                    }
                    else {
                        if (age <= 30 && familyHistory === "0" && activityMinutes >= 30 && saltContent === "Less than 2500" && alcoholUnits < 5 && (stressLevel === "Low" || stressLevel === "Medium") && kidneyDisease === "No") {
                            bloodPressure = "Normal Blood Pressure"
                        } else {
                            bloodPressure = 'Abnormal Blood Pressure';
                        }
                    }


                    if (bloodPressure === 'Normal Blood Pressure') {
                        signUpModal.style.display = "none"
                        results.innerText = 'Your blood pressure is normal \n\n Maintain a healthy lifestyle.';
                    } else {
                        results.innerText = 'Your blood pressure is abnormal \n\n Consult a healthcare professional for further evaluation.';
                        signUpModal.style.display = "flex"
                    }

                })
            </script>